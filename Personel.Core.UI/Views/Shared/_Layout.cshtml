

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Personel.Core.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Personel.Core.UI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">AnaSayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index","Departman")">Departmanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index","Personel")">Personeller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("LogOut","Login")">Çıkış Yap</a>
                        </li>
                        <p class="nav-item">
                            <a class="nav-link text-dark">HOŞGELDİNİZ</a>
                        </p>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="content">
                @RenderBody()
            </section>
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.unobtrusive-ajax.min.js"> </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootbox.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
  
        $(".sarisinCocuk").on("click",function(){    

              var that = $(this);
              var url = that.data("patates");  
              alert(url);
              console.log(url);

              $.ajax({
                  url:url,
                  type:"Get"
              }).done(function(sonuc){     
                  $('#personellerinGorunecegiListeKutusu').html(sonuc);  
              });
          });
    </script>

    

    <script>
        $(".mavis").on("click",function(){
            var that = $(this);
                  var url = that.data("url");  
                  $.ajax({
                      url:url,
                      type:"Get"
                  }).done(function(sonuc){       
                      alert(sonuc);   
                  });

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

  
</body>
 
</html>


